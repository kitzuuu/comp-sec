generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  verification String
  password     String
  balance      Int       @default(0)
  admin        Boolean   @default(false)
  blocked      Boolean   @default(false)
  token        String?
  tokenExpires DateTime?
}
